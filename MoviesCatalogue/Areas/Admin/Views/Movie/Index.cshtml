@model List<Movie>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Movie List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Movie" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create New Movie
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Movie id</th>
            <th>Movie title</th>
            <th>Movie genre</th>
            <th>Movie description</th>
            <th>Movie director</th>
            <th>Movie rating</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Title</td>
                <td>@obj.Category.Name</td>
                <td>@obj.Description</td>
                <td>@obj.Director</td>
                <td>@obj.Rating</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="Movie" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-3">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-area="Admin" asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class=" btn btn-danger mx-3">
                            <i class="bi bi-file-earmark-x"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>