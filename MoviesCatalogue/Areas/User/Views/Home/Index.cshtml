@model IEnumerable<Movie>

<div class="row pb-3">
    @foreach(var movie in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@movie.ImageUrl" style="height: 500px" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark text-center">@movie.Title</p>
                                <p class="card-title h3 text-dark text-center"><i class="bi bi-star"></i>@movie.Rating</p>
                            </div>
                        </div>
                        <div class="text-center pt-1">
                            <a asp-area="User" asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary" style="width: 250px; opacity: 0.7">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    } 
